<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginLeft="90dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="139dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtLabelTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Time:"
                android:textColor="@color/colorIoTTree"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txtHis_Time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="06-04-2018"
                android:textColor="@color/colorIoTTree"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txtHis_Time2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="12:12:00"
                android:textColor="@color/colorIoTTree"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtHis_Temp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Temp:"
                android:textColor="#FF9800"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txtHis_Hum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Humi:"
                android:textColor="#051EA0"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txtHis_Soil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Soil:"
                android:textColor="#FA0553"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txtHis_Pump"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pump:"
                android:textColor="#FA0553"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>